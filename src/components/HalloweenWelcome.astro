</div>

<style>
  .halloween-welcome-banner {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: linear-gradient(135deg, #ff6b35, #d43800);
    color: white;
    z-index: 1000;
    transform: translateY(-100%);
    transition: transform 0.5s ease-in-out;
    box-shadow: 0 2px 10px rgba(255, 107, 53, 0.3);
  }
  
  .halloween-welcome-banner.show {
    transform: translateY(0);
  }
  
  .halloween-banner-content {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 12px 20px;
    position: relative;
  }
  
  .halloween-text {
    display: flex;
    align-items: center;
    gap: 8px;
    font-weight: 500;
  }
  
  .halloween-emoji {
    font-size: 1.2rem;
    animation: bounce 2s ease-in-out infinite;
  }
  
  .halloween-emoji:nth-child(3) {
    animation-delay: 0.5s;
  }
  
  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-3px);
    }
  }
  
  .halloween-message {
    font-size: 0.95rem;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }
  
  .halloween-close-btn {
    position: absolute;
    right: 15px;
    background: none;
    border: none;
    color: white;
    font-size: 1.5rem;
    cursor: pointer;
    padding: 4px 8px;
    border-radius: 4px;
    transition: all 0.2s ease;
    opacity: 0.8;
  }
  
  .halloween-close-btn:hover {
    opacity: 1;
    background: rgba(255, 255, 255, 0.1);
  }
  
  /* ðŸŽƒ Responsive */
  @media (max-width: 768px) {
    .halloween-banner-content {
      padding: 10px 15px;
    }
    
    .halloween-message {
      font-size: 0.85rem;
    }
    
    .halloween-emoji {
      font-size: 1rem;
    }
    
    .halloween-close-btn {
      right: 10px;
      font-size: 1.3rem;
    }
  }
  
  @media (max-width: 480px) {
    .halloween-text {
      flex-direction: column;
      gap: 4px;
      text-align: center;
    }
    
    .halloween-emoji {
      font-size: 1.1rem;
    }
    
    .halloween-message {
      font-size: 0.8rem;
      line-height: 1.3;
    }
  }
</style>

<script>
  // ðŸŽƒ Script para mostrar el mensaje de bienvenida Halloween
  document.addEventListener('DOMContentLoaded', function() {
    const banner = document.getElementById('halloween-welcome');
    const closeBtn = document.getElementById('close-halloween-welcome');
    
    // Verificar si ya se mostrÃ³ el mensaje en esta sesiÃ³n
    const hasSeenWelcome = sessionStorage.getItem('halloween-welcome-seen-v2');
    
    if (!hasSeenWelcome) {
      // Mostrar el banner despuÃ©s de un pequeÃ±o delay
      setTimeout(() => {
        banner?.classList.add('show');
      }, 800);
    }
    
    // FunciÃ³n para cerrar el banner
    function closeBanner() {
      banner?.classList.remove('show');
      sessionStorage.setItem('halloween-welcome-seen-v2', 'true');
    }
    
    // Event listeners
    closeBtn?.addEventListener('click', closeBanner);
    
    // Auto-cerrar despuÃ©s de 5 segundos
    if (!hasSeenWelcome) {
      setTimeout(() => {
        if (banner?.classList.contains('show')) {
          closeBanner();
        }
      }, 5000);
    }
  });
</script>

<style>
  .modern-footer {
    position: relative;
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
    border-top: 1px solid rgba(225, 29, 116, 0.3);
    color: #e2e8f0;
    overflow: hidden;
    margin-top: auto;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1rem 1.5rem;
    position: relative;
    z-index: 2;
  }

  .footer-main {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  /* Brand section */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-logo {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 800;
    color: #e11d74;
    text-shadow: 0 0 10px rgba(225, 29, 116, 0.5);
  }

  .logo-subtitle {
    font-size: 0.875rem;
    color: #94a3b8;
    font-weight: 500;
  }

  .footer-description {
    color: #cbd5e1;
    line-height: 1.6;
    max-width: 300px;
  }

  /* Navigation */
  .footer-nav, .footer-contact, .footer-social {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #f1f5f9;
    margin-bottom: 0.5rem;
    position: relative;
  }

  .footer-title::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 30px;
    height: 2px;
    background: linear-gradient(90deg, #e11d74, #3b82f6);
    border-radius: 1px;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-link {
    color: #94a3b8;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    padding-left: 1rem;
  }

  .footer-link::before {
    content: '‚ñ∂';
    position: absolute;
    left: 0;
    color: #e11d74;
    font-size: 0.75rem;
    opacity: 0;
    transform: translateX(-5px);
    transition: all 0.3s ease;
  }

  .footer-link:hover {
    color: #e11d74;
    padding-left: 1.5rem;
  }

  .footer-link:hover::before {
    opacity: 1;
    transform: translateX(0);
  }

  /* Contact info */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .contact-icon {
    font-size: 1.125rem;
  }

  .contact-link, .contact-text {
    color: #94a3b8;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .contact-link:hover {
    color: #e11d74;
  }

  /* Social links */
  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(225, 29, 116, 0.1);
    border: 1px solid rgba(225, 29, 116, 0.3);
    border-radius: 8px;
    color: #94a3b8;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-icon {
    width: 20px;
    height: 20px;
  }

  .social-link:hover {
    background: rgba(225, 29, 116, 0.2);
    border-color: #e11d74;
    color: #e11d74;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(225, 29, 116, 0.3);
  }

  /* Divider */
  .footer-divider {
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(225, 29, 116, 0.5), transparent);
    margin: 2rem 0;
  }

  /* Bottom section */
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-copyright {
    color: #64748b;
    font-size: 0.875rem;
  }

  .footer-tech {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .tech-text {
    color: #64748b;
    font-size: 0.875rem;
  }

  .tech-stack {
    display: flex;
    gap: 0.5rem;
  }

  .tech-item {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  /* Scroll to top button */
  .scroll-to-top {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #e11d74, #3b82f6);
    border: none;
    border-radius: 50%;
    color: white;
    cursor: pointer;
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px);
    transition: all 0.3s ease;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 12px rgba(225, 29, 116, 0.3);
  }

  .scroll-to-top.visible {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .scroll-to-top:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(225, 29, 116, 0.4);
  }

  .scroll-to-top svg {
    width: 24px;
    height: 24px;
  }

  /* Footer effects */
  .footer-effects {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 1;
  }

  .footer-glow {
    position: absolute;
    top: -50%;
    left: 50%;
    transform: translateX(-50%);
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(225, 29, 116, 0.05) 0%, transparent 70%);
    animation: footerGlow 8s ease-in-out infinite alternate;
  }

  @keyframes footerGlow {
    from {
      opacity: 0.3;
      transform: translateX(-50%) scale(1);
    }
    to {
      opacity: 0.6;
      transform: translateX(-50%) scale(1.1);
    }
  }

  .footer-particles {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 20% 20%, rgba(225, 29, 116, 0.1) 1px, transparent 1px),
      radial-gradient(circle at 80% 80%, rgba(59, 130, 246, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    animation: footerParticles 20s linear infinite;
  }

  @keyframes footerParticles {
    0% { transform: translateY(0); }
    100% { transform: translateY(-50px); }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }

    .scroll-to-top {
      bottom: 1rem;
      right: 1rem;
      width: 45px;
      height: 45px;
    }

    .scroll-to-top svg {
      width: 20px;
      height: 20px;
    }
  }

  @media (max-width: 480px) {
    .footer-container {
      padding: 2rem 1rem 1rem;
    }

    .social-links {
      justify-content: center;
    }

    .tech-stack {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>

<script>
  // Scroll to top functionality
  document.addEventListener('DOMContentLoaded', function() {
    const scrollToTopBtn = document.getElementById('scroll-to-top');
    
    if (!scrollToTopBtn) return;
    
    // Show/hide button based on scroll position
    window.addEventListener('scroll', function() {
      if (window.pageYOffset > 300) {
        scrollToTopBtn.classList.add('visible');
      } else {
        scrollToTopBtn.classList.remove('visible');
      }
    });

    // Smooth scroll to top
    scrollToTopBtn.addEventListener('click', function() {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });
  });
</script>

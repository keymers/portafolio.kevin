<style>
	/*  Importar estilos navide帽os */
	/* @import "../styles/christmas.css"; */

	@keyframes glitch {
		0% {
			background-position: 0% 0%;
		}
		100% {
			background-position: 200% 200%;
		}
	}

	/* Efecto de escaneo m谩s suave */
	.scan-line {
		background: linear-gradient(
			to bottom,
			transparent 0%,
			rgba(225, 29, 116, 0.03) 50%,
			transparent 100%
		);
		background-size: 100% 8px;
		animation: scan 6s linear infinite;
		pointer-events: none;
		opacity: 0.3;
	}

	@keyframes scan {
		0% {
			transform: translateY(-100%);
		}
		100% {
			transform: translateY(100%);
		}
	}

	/* Efecto de texto glitch */
	.glitch-text {
		position: relative;
		text-shadow:
			0.05em 0 0 #e11d74,
			-0.05em -0.025em 0 #3b82f6;
		animation: glitch-text 3s infinite;
		transform: translateZ(0);
		will-change: text-shadow;
	}

	@keyframes glitch-text {
		0% {
			text-shadow:
				0.05em 0 0 #e11d74,
				-0.05em -0.025em 0 #3b82f6;
		}
		14% {
			text-shadow:
				0.05em 0 0 #e11d74,
				-0.05em -0.025em 0 #3b82f6;
		}
		15% {
			text-shadow:
				-0.05em -0.025em 0 #e11d74,
				0.025em 0.025em 0 #3b82f6;
		}
		49% {
			text-shadow:
				-0.05em -0.025em 0 #e11d74,
				0.025em 0.025em 0 #3b82f6;
		}
		50% {
			text-shadow:
				0.025em 0.05em 0 #e11d74,
				0.05em 0 0 #3b82f6;
		}
		99% {
			text-shadow:
				0.025em 0.05em 0 #e11d74,
				0.05em 0 0 #3b82f6;
		}
		100% {
			text-shadow:
				-0.025em 0 0 #e11d74,
				-0.025em -0.025em 0 #3b82f6;
		}
	}

	/* Efecto cyberpunk para tarjetas */
	.cyberpunk-card {
		position: relative;
		overflow: hidden;
	}

	/* Efecto para enlaces cyberpunk */
	.cyberpunk-link {
		position: relative;
		overflow: hidden;
	}

	.cyberpunk-link::after {
		content: "";
		position: absolute;
		bottom: -2px;
		left: 0;
		width: 100%;
		height: 1px;
		background: linear-gradient(90deg, #e11d74, #3b82f6);
		transform: scaleX(0);
		transform-origin: right;
		transition: transform 0.5s ease;
		opacity: 0.7;
	}

	.cyberpunk-link:hover::after {
		transform: scaleX(1);
		transform-origin: left;
	}

	/* Animaci贸n para nodos neurales */
	.neural-node {
		filter: drop-shadow(0 0 1px currentColor);
	}

	.neural-connection {
		stroke-dasharray: 5, 5;
		animation: neural-dash 40s linear infinite;
		opacity: 0.15;
	}

	@keyframes neural-dash {
		to {
			stroke-dashoffset: 1000;
		}
	}

	/* Animaciones de transici贸n de p谩gina */
	.page-transition {
		animation: fadeIn 0.5s ease-out;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.page-link {
		position: relative;
	}

	.page-link::before {
		content: "";
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: var(--accent);
		transform: translateY(100%);
		transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
		z-index: 9999;
		pointer-events: none;
	}

	.page-link:hover::before {
		transform: translateY(0);
	}

	/* Scrollbar cyberpunk */
	::-webkit-scrollbar {
		width: 12px;
		background: transparent;
	}
	::-webkit-scrollbar-thumb {
		background: linear-gradient(120deg, #e11d74 30%, #3b82f6 70%);
		border-radius: 8px;
		box-shadow:
			0 0 8px #e11d74,
			0 0 16px #3b82f6;
		border: 2px solid #181b2b;
	}
	::-webkit-scrollbar-thumb:hover {
		background: linear-gradient(120deg, #3b82f6 30%, #e11d74 70%);
		box-shadow:
			0 0 16px #e11d74,
			0 0 32px #3b82f6,
			0 0 24px #fff;
	}
	::-webkit-scrollbar-track {
		background: rgba(24, 27, 43, 0.5);
		border-radius: 8px;
	}

	/* Firefox */
	* {
		scrollbar-width: thin;
		scrollbar-color: #e11d74 #181b2b;
	}

	@media (max-width: 1024px) {

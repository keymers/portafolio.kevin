---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import HalloweenNavigation from "../components/HalloweenNavigation.astro";
import CentralLogo from "../components/CentralLogo.astro";
import MobileCards from "../components/MobileCards.astro";
import HalloweenWelcome from "../components/HalloweenWelcome.astro";
import HalloweenDecorations from "../components/HalloweenDecorations.astro";
import HalloweenLottie from "../components/HalloweenLottie.astro";
import HalloweenLottie2 from "../components/HalloweenLottie2.astro";
import HalloweenLottieLogo from "../components/HalloweenLottieLogo.astro";
import ChristmasNavigation from "../components/ChristmasNavigation.astro";
import ChristmasWelcome from "../components/ChristmasWelcome.astro";
import ChristmasDecorations from "../components/ChristmasDecorations.astro";
import ChristmasLottie from "../components/ChristmasLottie.astro";
import ChristmasLottieLogo from "../components/ChristmasLottieLogo.astro";
import ChristmasLights from "../components/ChristmasLights.astro";
import DesktopCards from "../components/DesktopCards.astro";
import Footer from "../components/Footer.astro";
import WhatsAppButton from "../components/WhatsAppButton.astro";
import MatrixEffect from "../components/MatrixEffect.astro";
import TestimonialsSection from "../components/TestimonialsSection";

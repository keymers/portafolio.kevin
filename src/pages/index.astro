		animating = true;
		svg.classList.add('easter-egg-glitch');
		btn.classList.add('easter-egg-flash');
		msg.classList.remove('hidden');
		setTimeout(() => {
			svg.classList.remove('easter-egg-glitch');
			btn.classList.remove('easter-egg-flash');
			animating = false;
